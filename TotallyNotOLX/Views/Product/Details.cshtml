@model Product
@section heads{
 <link href="@Url.Content("~/css/Product/productpage.css")" rel="stylesheet" type="text/css" />
}
 <div class="container">
     <table>
         <img src="@Model.ProductImage" alt="Alternate Text" class="center" />
     </table>
     <div class="product-details">
         <h2>@Model.Name</h2>
         <h2>@Model.Price лв.</h2>
         <p class="description">@Model.Description</p>
         <h5 class="seller">@Model.Seller.FirstName @Model.Seller.LastName</h5>
         <p class="data">@Model.DatePosted</p>
     </div>



     @if (Model.SavedByUser)
     {
         <form asp-controller="product" asp-action="RemoveProductFromSaved" asp-route-id="@Model.Id" method="post">
             <button class="saved" type="submit" aria-label="Remove product from saved">Remove from saved</button>
         </form>
     }
     else
     {
         <form asp-controller="product" asp-action="AddProductToSaved" asp-route-id="@Model.Id" method="post">
             <button class="details" type="submit" aria-label="Save product">Save</button>
         </form>
     }
     @if (Model.CreatedByUser)
     {
         <form asp-controller="product" asp-action="Delete" asp-route-id="@Model.Id" method="post">
             <button class="details" type="submit" aria-label="Remove product">Remove product</button>
         </form>
     }
 </div>