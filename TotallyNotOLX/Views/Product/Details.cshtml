@model Product
 <link href="@Url.Content("~/css/Product/productpage.css")" rel="stylesheet" type="text/css" />
<h2>@Model.Name</h2>
<p>@Model.Description</p>
<p>@Model.Seller.FirstName @Model.Seller.LastName</p>
<p>@Model.DatePosted</p>
<p>@Model.Price</p>
<p>@Model.Notes</p>
<img src="@Model.ProductImage" alt="Alternate Text" />

@if (Model.SavedByUser)
{
    <form asp-controller="product" asp-action="RemoveProductFromSaved" asp-route-id="@Model.Id" method="post">
        <button type="submit" aria-label="Remove product from saved">Remove from saved</button>
    </form>
}
else
{
    <form asp-controller="product" asp-action="AddProductToSaved" asp-route-id="@Model.Id" method="post">
        <button type="submit" aria-label="Save product">Save</button>
    </form>
}
@if(Model.CreatedByUser)
{
     <form asp-controller="product" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" aria-label="Remove product">Remove product</button>
    </form>
}
