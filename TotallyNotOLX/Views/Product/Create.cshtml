@model Product
<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group text-black">
        <h3>Add product</h3>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceNegotiable"></label>
        <input asp-for="PriceNegotiable" class="form-control" />
        <span asp-validation-for="PriceNegotiable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Condition"></label>
        <input asp-for="Condition" class="form-control" />
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage"></label>
        <input asp-for="ProductImage" class="form-control" />
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    <input type="submit" name="name" value="Sumbmit" />
</form>    